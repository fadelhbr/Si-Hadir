<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Teks Riwayat Kehadiran -->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Riwayat Kehadiran"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.card.MaterialCardView
                style="@style/Widget.Material3.CardView.Elevated"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Table Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/rounded_table"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:text="Tanggal"
                            android:gravity="center"
                            android:textColor="?attr/colorOnPrimary"
                            android:textStyle="bold"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Jadwal Shift"
                            android:gravity="center"
                            android:textColor="?attr/colorOnPrimary"
                            android:textStyle="bold"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Waktu Masuk"
                            android:gravity="center"
                            android:textColor="?attr/colorOnPrimary"
                            android:textStyle="bold"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Waktu Keluar"
                            android:textColor="?attr/colorOnPrimary"
                            android:textStyle="bold"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Status"
                            android:gravity="center"
                            android:textColor="?attr/colorOnPrimary"
                            android:textStyle="bold"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- Table Content (RecyclerView) -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTabelRiwayat"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:maxHeight="250dp"
                        android:scrollbars="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_riwayat"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_marginTop="16dp">

                    <!-- Summary Title -->
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ringkasan Bulan Ini"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Attendance Overview Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardElevation="4dp"
                        style="@style/Widget.Material3.CardView.Elevated" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp"
                            android:layout_margin="2dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Total Hari Kerja"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/totalWorkDays"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="22 hari"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/attendanceProgress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="12dp"
                                android:progress="75"
                                style="@style/Widget.Material3.LinearProgressIndicator"
                                app:trackCornerRadius="8dp"
                                app:trackThickness="8dp"
                                app:indicatorColor="#2196F3"/>

                            <TextView
                                android:id="@+id/attendancePercentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="75% Kehadiran"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Status Cards Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- First Row of Status Cards -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="2dp">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="12dp"
                                app:cardCornerRadius="12dp"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardElevation="4dp"
                                style="@style/Widget.Material3.CardView.Elevated">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hadir"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/presentDays"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="18 hari"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginBottom="12dp"
                                style="@style/Widget.Material3.CardView.Elevated"
                                app:cardCornerRadius="12dp"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tidak Hadir"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/absentDays"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="2 hari"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <!-- Second Row of Status Cards -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:orientation="horizontal">

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="2dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="12dp"
                                style="@style/Widget.Material3.CardView.Elevated"
                                app:cardCornerRadius="12dp"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cuti dan Izin"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/leaveDays"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1 hari"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginBottom="12dp"
                                style="@style/Widget.Material3.CardView.Elevated"
                                app:cardCornerRadius="12dp"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardElevation="4dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="16dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Pulang Awal"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/earlyLeaveDays"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="1 hari"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    android:background="#F5F6FA">

    <!-- Header Section with Better Styling -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            style="@style/SCREEN_TOP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Permohonan Izin dan Cuti"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Summary Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <!-- Cuti Terpakai Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E8F5E9"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            style="@style/TEXT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="sisa hari anda Cuti"
                            android:textColor="#66BB6A"
                            android:textSize="14sp" />

                        <TextView
                            style="@style/TEXT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 Hari"
                            android:textColor="#2E7D32"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Tables Container with Improved Styling -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        style="@style/SCREEN_TOP"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tabel Cuti Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    style="@style/TEXT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Riwayat Izin"
                    android:textColor="#1a237e"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAjukanIzin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Ajukan Izin"
                    android:textSize="12sp"
                    app:cornerRadius="8dp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <!-- Header Row -->
                    <TableRow
                        android:background="#F8F9FA"
                        android:padding="12dp">

                        <TextView
                            style="@style/TableHeaderStyle"
                            android:text="TANGGAL"/>

                        <TextView
                            style="@style/TableHeaderStyle"
                            android:text="JENIS IZIN"/>

                        <TextView
                            style="@style/TableHeaderStyle"
                            android:text="KETERANGAN"/>

                        <TextView
                            style="@style/TableHeaderStyle"
                            android:text="STATUS"/>
                    </TableRow>

                    <!-- Data Rows with Alternating Colors -->
                    <TableRow
                        android:background="#FFFFFF"
                        android:padding="12dp">

                        <TextView
                            style="@style/TableContentStyle"
                            android:text="28/11/2024"/>

                        <TextView
                            style="@style/TableContentStyle"
                            android:text="sakit"/>

                        <TextView
                            style="@style/TableContentStyle"
                            android:text="demam"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Disetujui"
                            style="@style/TEXT"
                            android:textAlignment="center"
                            android:textColor="#4CAF50"
                            android:background="@drawable/status_approved_bg"/>
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tabel Izin Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    style="@style/TEXT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Riwayat Cuti"
                    android:textColor="#1a237e"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAjukanCuti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+ Ajukan Cuti"
                    android:textSize="12sp"
                    app:cornerRadius="8dp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*">

                    <!-- Header Row -->
                    <TableRow
                        android:background="#F8F9FA"
                        android:padding="12dp">

                        <TextView
                            style="@style/TableHeaderStyle"
                            android:text="TANGGAL MULAI" />

                        <TextView
                            style="@style/TableHeaderStyle"
                            android:text="TANGGAL SELESAI" />

                        <TextView
                            style="@style/TableHeaderStyle"
                            android:text="STATUS"/>
                    </TableRow>

                    <!-- Data Row -->
                    <TableRow
                        android:background="#FFFFFF"
                        android:padding="12dp">

                        <TextView
                            style="@style/TableContentStyle"
                            android:text="26/12/2024"/>

                        <TextView
                            style="@style/TableContentStyle"
                            android:text="03/01/2025"/>


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Disetujui"
                            style="@style/TEXT"
                            android:textAlignment="center"
                            android:textColor="#4CAF50"
                            android:background="@drawable/status_approved_bg"/>
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>